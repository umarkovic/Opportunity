<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OpportunITyy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" >Opportun<strong style="color: #03a9f4">IT</strong>y</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            @Html.ActionLink("Home", "UserSignedIn", "User", new { email = ViewBag.emailOfUser }, new { @class = " nav-link text-dark " })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("History", "GetUserHistory", "User", "", new { @class = "nav-link text-dark " })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Saved", "GetSavedAds", "User", "", new { @class = "nav-link text-dark " })
                        </li>
                        



                    </ul>
                    

                </div>
            </div>

            <div class="collapse navbar-collapse justify-content-md-center" id="navbarsExample08" style="padding-right:7%;">
                <ul class="navbar-nav">
                  
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="http://example.com" id="dropdown08" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Profile</a>
                        

                        <div class="dropdown-menu" aria-labelledby="dropdown08">
                            <a class="nav-link text-primary" asp-area="" asp-controller="User" asp-action="UserProfile">Profile </a>
                            <hr />
                            <a class="dropdown-item">  @Html.ActionLink("Edit profile ", "EditUser", "User", "", new { @class = "dropdown-item" }) </a>
                            <a class="dropdown-item"> @Html.ActionLink("History", "GetUserHistory", "User", "", new { @class = "dropdown-item " }) </a>
                            <a class="dropdown-item">  @Html.ActionLink("Saved", "GetSavedAds", "User", "", new { @class = "dropdown-item " }) </a>
                            <hr />
                            <a class="nav-link text-primary" asp-area="" asp-controller="User" asp-action="LogoutUser">Logout</a>


                        </div>
                    </li>
                </ul>
            </div>
        </nav>
        
    </header>

    <body>

        <div class="container">
            <div class="card border-0 shadow my-5" style="border-radius:5%;">
                <div class="card-body p-5">
                    <div >
                        <div class="row mb-2">
                            @RenderBody()
                        </div>
                    </div>
        
                </div>
            </div>
        </div>
       
           
       


        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)

    </body>
</html>
<style>
    body {
        background: #007bff;
        background: linear-gradient(to right, #0062E6, #33AEFF);
    }
</style>