@model Ad
@{
    Layout = "~/Views/Shared/_Layout2Firm.cshtml";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.8.1/css/bootstrap-select.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.8.1/js/bootstrap-select.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<div class="container">
    <h1>Add ad</h1>

    <form asp-action="AddAd" asp-controller="Firm" method="post">

        <div class="registerdiv">

            <div class="form-group col-sm-12">
                <label class="col-lg-3 control-label"><h3> Technologies</h3>  </label>
                <br>
                <div class="col-lg-9">
                    <select asp-for="Technologies" class="form-group" asp-items="ViewBag.Technologies" multiple>
                        <option value=""> Choose required technologies </option>

                    </select>
                    @Html.ValidationMessageFor(m => m.Technologies, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-sm-12">
                <label class="col-lg-3 control-label"> <h3> Type of job </h3></label>
                <br>
                <div class="col-lg-9">
                    <select asp-for="TypeOfJob" class="form-group" asp-items="ViewBag.TypeOfJob">
                        <option value=""> Choose type of job </option>

                    </select>
                    @Html.ValidationMessageFor(m => m.TypeOfJob, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-sm-12">
                <label class="col-lg-3 control-label"><h3>City</h3>  </label>
                <br>
                <div class="col-lg-9">
                    @Html.TextBoxFor(m => m.City, new { placeholder = "City", @class = "form-control" })

                </div>
            </div>

            <div class="form-group col-sm-12">
                <label class="col-lg-3 control-label"><h3> Seniority</h3></label>
                <br>
                <div class="col-lg-9">
                    <select asp-for="Seniority" class="form-group" asp-items="ViewBag.Seniority">
                        <option value=""> Choose type of seniority required </option>

                    </select>
                    @Html.ValidationMessageFor(m => m.Seniority, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-sm-12">
                <label class="col-lg-3 control-label"><h3> Type of work</h3> </label>
                <br>
                <div class="col-lg-9">
                    <select asp-for="TypeOfWork" class="form-group" asp-items="ViewBag.TypeOfWork">
                        <option value=""> Choose type of work </option>

                    </select>
                    @*@Html.ValidationMessageFor(m => m.LName)*@
                </div>
            </div>
            <div class="form-group col-sm-12">
                <label class="col-lg-3 control-label"><h3> Description</h3></label>
                <br>
                <div class="col-lg-9">
                    @Html.TextAreaFor(m => m.Description, new { placeholder = "Description about job", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Description)
                </div>
            </div>
            <div class="form-group col-sm-12">
                <label class="col-lg-3 control-label"><h3> Online interview</h3></label>
                <br>
                <div class="col-lg-9">
                    @Html.EditorFor(model => model.OnlineInterView, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.OnlineInterView)
                </div>
            </div>




            <div class="form-group">
                <div class="col-sm-12 btn-submit">
                    <button type="submit" class="btn btn-success">Publish Ad</button>

                </div>
            </div>
        </div>
    </form>
</div>
<script>
    $('select').selectpicker();
</script>