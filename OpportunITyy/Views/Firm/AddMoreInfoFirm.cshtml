@model Firm
@{


    Layout = "~/Views/Shared/_Layout2Firm.cshtml";
}
@using (@Html.BeginForm())

{

<div class="form-group col-sm-12">
    <label asp-for="@Model.NameOfFirm" class="col-lg-3 control-label"></label>
    <br>
    <div class="col-lg-9">
        @Html.TextAreaFor(m => m.NameOfFirm, new { placeholder = "Name of firm", @class = "form-control" })

    </div>
</div>

    <div class="form-group col-sm-12">
        <label asp-for="@Model.Description" class="col-lg-3 control-label"></label>
        <br>
        <div class="col-lg-9">
            @Html.TextAreaFor(m => m.Description, new { placeholder = "Description", @class = "form-control" })

        </div>
    </div>
    <div class="form-group col-sm-12">
        <label asp-for="@Model.Location" class="col-lg-3 control-label"></label>
        <br>
        <div class="col-lg-9">
            @Html.TextBoxFor(m => m.Location, new { placeholder = "Location", @class = "form-control" })

        </div>
    </div>




    <input type="submit" />

    <style>
        .row {
            display: contents;
        }
    </style>
}